<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ed4"
    android:orientation="vertical">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/song_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabMode="scrollable"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/ed1"
        app:tabSelectedTextColor="@color/ed1"
        app:tabBackground="@color/ed2"
        app:tabTextColor="@color/ed5" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/song_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#222222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_tab_layout" />


</LinearLayout>